generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id        String  @id @default(uuid())
    firstName String?
    lastName  String?
    email     String  @unique
    imageUrl  String?

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    library      UserLibrary[]
    transactions Transactions[]

    @@index([email])
}

model UserLibrary {
    id        String    @id @default(uuid())
    user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
    userId    String

    bookTitle  String
    bookId     String
    bookCover  String?
    bookAuthor String?

    createdAt DateTime @default(now())
    updatedAt DateTime @default(now()) @updatedAt

    @@unique([userId, bookId])
    @@index([userId])
    @@index([bookId])
}

model Transactions {
    id        String  @id @default(uuid())
    user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
    userId    String

    bookTitle  String
    bookId     String
    bookCover  String?
    bookAuthor String?
    messages   String[]
    
    updatedAt DateTime @updatedAt
    createdAt DateTime @default(now())

    @@unique([userId, bookId])
    @@index([userId])
    @@index([bookId])
    @@index([createdAt(sort: Desc)])
}